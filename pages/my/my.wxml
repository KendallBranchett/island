<view class="container">
    <image src="/images/my/my@bg.png" class="bg"></image>
    <!-- <open-data class="avatar avatar-position" type="userAvatarUrl"/> -->
    <button wx:if="{{avatarUrl==''}}" class="avatar avatar-position" open-type="chooseAvatar" bind:chooseavatar="onChooseAvatar">
        <image class="avatar default-avatar"  src="{{defaultAvatarUrl}}" />
    </button>
    <image wx:if="{{avatarUrl}}" bind:chooseavatar="onChooseAvatar" class="avatar avatar-position" src="{{avatarUrl?avatarUrl:defaultAvatarUrl}}"></image>

    <view class="about-container">
        <view bind:tap="onJumpToAbout" class="about-us">
            <image src="/images/my/about.png" />
            <text class="description">关于我们</text>
        </view>
        <view class="about-us">
            <text class="book-num">{{bookCount}}</text>
            <text class="description">喜欢的书</text>
        </view>
    </view>
    
    <view class="like-container">
        <image class="headline" src="/images/my/like.png" />
        <view class="preview-container">
            <block wx:for="{{classics}}" wx:key="">
                <v-preview bind:tapping="onJumpToDetail" class="preview" classic="{{item}}" />
            </block>
        </view>
    </view>
</view>